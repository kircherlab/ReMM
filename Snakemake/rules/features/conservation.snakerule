rule get_verPhyloP:
    output:
        "input/features/hg38/verPhyloP/verPhyloP.{chr}.wig.gz"
    params:
        url=lambda wildcards: "%s%s.phyloP100way.wigFix.gz" % (config['hg38']['verPhyloP']["url"], wildcards.chr)
    shell:
        """
        curl {params.url} > {output}
        """

